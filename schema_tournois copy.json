{
    "title": "Tournois",
    "description": "Schéma JSON des données relatives aux tournois.",
    "type": "object",
    "properties": {
        "tournois": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Sujet mail": {
                        "type": "string",
                        "description": "Sujet du mail reçu"
                    },
                    "Club": {
                        "type": "string",
                        "description": "Nom du club proposant le tournoi"
                    },
                    "Date": {
                        "type": "string",
                        "description": "Date du tournoi"
                    },
                    "categories": {
                        "type": "array",
                        "description": "Catégorie",
                        "items": {
                            "type": "object",
                            "properties": {
                                "categorie": {
                                    "type": "string",
                                    "enum": [
                                        "Seniors M",
                                        "Seniors F",
                                        "Loisir",
                                        "U21M",
                                        "U18M",
                                        "U18F",
                                        "U17M",
                                        "U17F",
                                        "U15M",
                                        "U15F",
                                        "U13M",
                                        "U13F",
                                        "U11M",
                                        "U11F",
                                        "U9M",
                                        "U9F",
                                        "U7"
                                    ]
                                },
                                "niveau": {
                                    "type": "string",
                                    "description": "Niveau du tournoi pour la catégorie"
                                }
                            }
                        }
                    }
                }
            },
        },
        "last_update": {
            "type": "string",
            "description": "Date de la dernière mise à jour"
        }
    }
    
}